INCLUDE options/options.makejail

PKG python \
    rust \
    py311-pip \
    py311-cryptography \
    py311-sqlite3

CMD pw useradd -n tahoe-lafs -d /tahoe -c "Decentralized secure filesystem"
CMD mkdir -p /tahoe
CMD chown tahoe-lafs:tahoe-lafs /tahoe

CMD --juser tahoe-lafs pip install --user tahoe-lafs
